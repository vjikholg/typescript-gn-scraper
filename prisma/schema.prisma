generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model GroupInfo {
  id Int @id @default(autoincrement()) @unique
  name String @unique
  label String @unique
  center String @unique
  frattini String @unique
  Sylow Int[] @unique
  order Int
  tags String[]
  charTable CharTableEntry[]
  generators Json[]
}

model Sylow {
  id Int @id @default(autoincrement()) @unique
  order Int
  count Int 
  type String
}

// MathNode + CharTable models 
model MathNode {
  id String             @id @default(uuid())
  type MathNodeTypes
  payload Json          // @ READ TIME, CHECK TYPE -> MAP TO PROPER READ FUNCTION 
  parentId String?
  parentNode MathNode?  @relation("ParentChildren", fields:[parentId], references: [id])
  children MathNode[]   @relation("ParentChildren")
  charTableEntries CharTableEntry[]

  @@index([parentId])
}

model CharTableEntry {
  id Int @id @default(autoincrement())
  groupInfoId Int
  groupInfo GroupInfo @relation(fields: [groupInfoId], references: [id]) 
  mathNodeId String
  mathNode MathNode @relation(fields: [mathNodeId], references: [id])
  row Int
  column Int

  @@index([groupInfoId])
  @@index([mathNodeId])
}

enum MathNodeTypes {
  text
  fraction
  sqrt 
  sub
  sup
  group
}


